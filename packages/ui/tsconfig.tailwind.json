{
    "extends": "@tsconfig/node20/tsconfig.json",
    "include": ["tailwind.preset.*"],
    "compilerOptions": {
        "composite": true,
        "tsBuildInfoFile": "./node_modules/.tmp/tsconfig.node.tsbuildinfo",
        "noEmit": false,
        "declaration": true,
        "emitDeclarationOnly": true,
        "declarationDir": "./dist",
        "module": "ESNext",
        "moduleResolution": "Bundler",
        "types": ["node"]
    }
}
