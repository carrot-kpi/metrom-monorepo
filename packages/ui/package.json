{
    "type": "module",
    "name": "@metrom-xyz/ui",
    "license": "GPL-3.0-or-later",
    "author": "Federico Luzzi <federico.luzzi@protonmail.com>",
    "version": "0.1.0",
    "main": "./dist/index.js",
    "types": "./dist/index.d.ts",
    "exports": {
        ".": {
            "types": "./dist/index.d.ts",
            "default": "./dist/index.js"
        },
        "./index.css": {
            "default": "./dist/style.css"
        },
        "./tailwind-preset": {
            "types": "./dist/tailwind.preset.d.ts",
            "default": "./dist/tailwind.preset.js"
        }
    },
    "publishConfig": {
        "access": "public"
    },
    "scripts": {
        "lint": "eslint && prettier --check './**/*.{json,md}'",
        "format": "eslint --fix && prettier --write './**/*.{json,md}'",
        "dev": "storybook dev -p 6006",
        "build:storybook": "storybook build",
        "build": "run-p type-check \"build-only\" && vue-tsc --project tsconfig.lib.json && vue-tsc --project tsconfig.tailwind.json",
        "test": "vitest",
        "build-only": "vite build -c vite.build.config.ts && vite build -c vite.tailwind.config.ts",
        "type-check": "vue-tsc --build --force",
        "size-limit": "size-limit"
    },
    "dependencies": {
        "@floating-ui/vue": "^1.0.6",
        "@vueuse/core": "^10.8.0",
        "dayjs": "^1.11.10",
        "ethereum-blockies-base64": "^1.0.2",
        "sdk": "workspace:*",
        "viem": "^2.7.15",
        "vue-collapsed": "^1.3.3",
        "vue-imask": "^7.5.0"
    },
    "peerDependencies": {
        "@fontsource-variable/inter": "^5.0.18",
        "@tailwindcss/typography": "^0.5.10",
        "tailwindcss": "^3.4.1",
        "vevm": "^0.2.0",
        "vue": "^3.4.19"
    },
    "devDependencies": {
        "@eslint/js": "^9.5.0",
        "@fontsource-variable/inter": "^5.0.18",
        "@size-limit/file": "^11.0.2",
        "@storybook/addon-essentials": "^8.1.10",
        "@storybook/addon-interactions": "^8.1.10",
        "@storybook/addon-links": "^8.1.10",
        "@storybook/addon-themes": "^8.1.10",
        "@storybook/blocks": "^8.1.10",
        "@storybook/test": "^8.1.10",
        "@storybook/vue3": "^8.1.10",
        "@storybook/vue3-vite": "^8.1.10",
        "@tailwindcss/typography": "^0.5.10",
        "@tsconfig/node20": "^20.1.2",
        "@types/eslint__js": "^8.42.3",
        "@types/jsdom": "^21.1.6",
        "@types/node": "^20.14.8",
        "@vitejs/plugin-vue": "^5.0.3",
        "@vue/eslint-config-prettier": "^9.0.0",
        "@vue/eslint-config-typescript": "^13.0.0",
        "@vue/test-utils": "^2.4.4",
        "@vue/tsconfig": "^0.5.1",
        "autoprefixer": "^10.4.17",
        "eslint": "^9.5.0",
        "eslint-config-prettier": "9.1.0",
        "eslint-config-turbo": "^2.0.4",
        "eslint-plugin-vue": "^9.17.0",
        "jsdom": "^24.0.0",
        "npm-run-all2": "^6.1.1",
        "pinia": "^2.1.7",
        "size-limit": "^11.0.2",
        "storybook": "^8.1.10",
        "tailwindcss": "^3.4.4",
        "typescript": "~5.5.2",
        "typescript-eslint": "^7.13.1",
        "vevm": "^0.2.0",
        "vite": "^5.3.1",
        "vitest": "^1.2.2",
        "vue": "^3.4.30",
        "vue-tsc": "^2.0.22"
    }
}
