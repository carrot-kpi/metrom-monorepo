{
    "type": "module",
    "private": true,
    "name": "subgraph",
    "scripts": {
        "update-addresses": "tsx ./scripts/update-addresses.ts",
        "codegen": "graph codegen",
        "build:only": "graph build",
        "build": "pnpm update-addresses celo-alfajores && pnpm codegen && graph build",
        "deploy:celo-alfajores": "pnpm update-addresses celo-alfajores && graph deploy --studio --network celo-alfajores metrom-celo-alfajores",
        "lint": "eslint --ext .js,.ts ./ && prettier --check './**/*.{json,md}'",
        "format": "eslint --fix --ext .js,.ts ./ && prettier --write './**/*.{json,md}'"
    },
    "dependencies": {
        "@graphprotocol/graph-cli": "0.69.0",
        "@graphprotocol/graph-ts": "0.34.0"
    },
    "devDependencies": {
        "@metrom-xyz/contracts": "^0.2.1",
        "@types/node": "^20.11.30",
        "@typescript-eslint/eslint-plugin": "^7.3.1",
        "@typescript-eslint/parser": "^7.3.1",
        "eslint": "^8.57.0",
        "eslint-config-prettier": "^9.1.0",
        "eslint-config-turbo": "^1.12.5",
        "eslint-plugin-prettier": "^5.1.3",
        "prettier": "^3.2.5",
        "tsx": "^4.7.1"
    }
}
