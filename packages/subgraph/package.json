{
    "type": "module",
    "private": true,
    "name": "subgraph",
    "scripts": {
        "update-addresses": "tsx ./scripts/update-addresses.ts",
        "codegen": "graph codegen",
        "build:only": "graph build",
        "build": "pnpm update-addresses celo-alfajores && pnpm codegen && graph build",
        "deploy:celo-alfajores": "pnpm update-addresses celo-alfajores && graph deploy --studio --network celo-alfajores metrom-celo-alfajores",
        "deploy:sepolia": "pnpm update-addresses sepolia && graph deploy --studio --network sepolia metrom-sepolia",
        "lint": "eslint --ext .js,.ts ./ && prettier --check './**/*.{json,md}'",
        "format": "eslint --fix --ext .js,.ts ./ && prettier --write './**/*.{json,md}'"
    },
    "dependencies": {
        "@graphprotocol/graph-cli": "0.71.0",
        "@graphprotocol/graph-ts": "0.35.1"
    },
    "devDependencies": {
        "@metrom-xyz/contracts": "^0.5.9",
        "@types/node": "^20.12.7",
        "@typescript-eslint/eslint-plugin": "^7.4.0",
        "@typescript-eslint/parser": "^7.4.0",
        "eslint": "^8.57.0",
        "eslint-config-prettier": "^9.1.0",
        "eslint-config-turbo": "^1.13.0",
        "eslint-plugin-prettier": "^5.1.3",
        "prettier": "^3.2.5",
        "tsx": "^4.7.2"
    }
}
